@model pbshop_web.Models.ToolModel

@{
    ViewData["Title"] = "Create";
}

<h1>Nueva herramienta</h1>

<h4>Crea un nueva herramienta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <input asp-for="id" type="hidden" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Herramienta</label>
                <input asp-for="toolName" class="form-control" />
                <span asp-validation-for="toolName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a herramientas</a>
</div>

