@model IEnumerable<pbshop_web.Models.EmployeeModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Empleados</h1>

<p>
    <a class="btn btn-primary " asp-action="Create">Registrar nuevo empleado</a>
</p>
<div class="card">
<table class="table">
    <thead class="bg-primary">
        <tr>
            <th class="text-white">
                @Html.DisplayNameFor(model => model.id)
            </th >
            <th class="text-white">
                Nombre
            </th>
            <th class="text-white">
                Apellido
            </th>
            <th class="text-white">
                Tel√©fono
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
             
                  @Html.ActionLink("Editar", "Edit", new {  id=item.id  }, new {@class = "btn btn-primary btn-sm"}) 

                @Html.ActionLink("Borrar", "Delete", new {id=item.id }, new {@class = "btn btn-danger btn-sm"})
            </td>
        </tr>
}
    </tbody>
</table>
</div>
